syntax on

set exrc
set guicursor=a:block
set relativenumber
set nohlsearch
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent
set nu 
set nowrap 
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile
set termguicolors
set scrolloff=8
set incsearch
set signcolumn=yes
set encoding=UTF-8
set splitright
set splitbelow

set colorcolumn=0
highlight ColorColumn ctermbg=0 guibg=yellow

" Give more space for displaying messages.
set cmdheight=2
