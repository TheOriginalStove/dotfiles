super + Shift + r
	pkill -usr1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config'

super + Return
	alacritty

# Firefox
super + f
	firefox

# Shutdown
super + m
	sudo shutdown now

# Quit/Restart BSPWM
super + shift + {q,r}
	bspc {quit,wm -r}

# Set window state
super + alt + {t,s,f}
	bspc node -t {tiled,floating,fullscreen}

super + {h,j,k,l}
	bspc node -f {west,south,north,east}

super + {_, shift + }q
	bspc node -{c,k} 

# rotate tree
super + shift + {d,a}
	bspc node @/ -C {forward,backward}

# send to desktop and follow it
super + shift + {1-5}
	bspc node -d '^{1-5}' --follow

super + {1-5}
	bspc node -d '^{1-5}'

super + d
	rofi -show run

# sxhkd help
# requires rofi
super + slash
	sxhkd-help

super + shift + n
	thunar

### Mute
XF86AudioMute
	amixer set Master toggle

### Master Volume
XF86AudioRaiseVolume
	amixer set Master 2.5%+,5%+;

super + XF86AudioRaiseVolume
	amixer set Master 0.5%+,1%+;

XF86AudioLowerVolume
	amixer set Master 2.5%-,5%-;

super + XF86AudioLowerVolume
	amixer set Master 0.5%-,1%-;

# quit bspwm normally
super + alt + Escape
	bspc quit
